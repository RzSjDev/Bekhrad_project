@using Bekhrad_project.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Login
                    </span>
                    <section id="loginForm">
                        @using (Html.BeginForm(Bekhrad_project.Domain.Resorce.Resource.Login, "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <span class="label-input100">Email</span>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "wrap-input100" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mt-4">
                                <span class="label-input100">Password</span>
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "wrap-input100" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 mt-3">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="text-right p-t-8 p-b-31">
                                <a>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </a>
                            </div>
                            <div class="container-login100-form-btn">
                                <div class="wrap-login100-form-btn">
                                    <div class="login100-form-bgbtn"></div>
                                    <button type="submit" class="login100-form-btn">
                                        login
                                    </button>
                                </div>
                            </div>
                        }
                    </section>

                    <div class="txt1 text-center p-t-54 p-b-20">
                        <span>
                            @Html.ActionLink("Register as a new user", "Register")
                        </span>
                    </div>
            </div>
            </form>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
